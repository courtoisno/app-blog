html
	head
		title='blogging app'
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(href="/css/materialize.min.css" type="text/css" rel ="stylesheet")
		link(href="/styless.css" type="text/css" rel ="stylesheet")
	body
		div
			nav(class="tabs" data-component="tabs")
				ul
					li(class="active")
						a(href='/') Home
					li
						a(href='/logout') Log out here
			
			
			h1 Your profile !

			span hello #{user.username} <br>
			span #{user.email}



			p Your posts here

		each post in posts
			p #{post.title} 
			p #{post.body}

		div

			if user

				p Hello #{user.username}	
							
				form(method='POST' action='/posting')
					p Title: <br>
						input(name="title" type="text")
					p Post: <br>
						textarea(name="body" type="text") Your post here
					p
						input(type="submit" value="submit")

				a(href='/') Home
				br

				a(href='/posting') See all posts
				br
				a(href='/logout') Log out here
			else
				p log in to post	
			



	
	